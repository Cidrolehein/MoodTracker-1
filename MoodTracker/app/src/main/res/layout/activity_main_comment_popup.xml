<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_comment_popup"
    android:layout_width="@dimen/main_commentPopup_layout_width"
    android:layout_height="@dimen/main_commentPopup_layout_height"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/activity_main_comment_popup_validate_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="text"
        android:hint="@string/main_commentPopup_hint"
        />

    <Button
        android:id="@+id/activity_main_comment_popup_validate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:textColor="@color/colorAccent"
        android:text="@string/main_commentPopup_validate"/>

    <Button
        android:id="@+id/activity_main_comment_popup_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginEnd="@dimen/main_commentPopup_cancelBtn_marginEnd"
        android:textColor="@color/colorAccent"
        android:text="@string/main_commentPopup_cancel"/>

</FrameLayout>